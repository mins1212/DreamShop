<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
 <tiles-definitions>
     <definition name="base" template="/layouts/basic.jsp">
        <put-attribute name="header" value="/layouts/header.jsp" />
        <put-attribute name="footer" value="/layouts/footer.jsp" />
    </definition>
    
    <definition name="*/*" extends="base">
         <put-attribute name="content" value="/tiles/{1}/{2}.jsp" />
         <put-attribute name="script" value="/tiles/{1}/{2}_script.jsp" />
     </definition>
    
</tiles-definitions>